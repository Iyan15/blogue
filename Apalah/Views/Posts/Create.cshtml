@model Apalah.Models.Post

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    @Html.LabelFor(model => model.Title)
                    @*<input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.">
                        <p class="help-block text-danger"></p>*@
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    @Html.LabelFor(model => model.Content)
                    @*<input type="email" class="form-control" placeholder="Email Address" id="email" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>*@
                    <textarea rows="5" class="form-control" placeholder="Write your post here." name="Content" id="Content" required data-validation-required-message="Write your post here."></textarea>
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    @*<label>Phone Number</label>
                        <input type="tel" class="form-control" placeholder="Phone Number" id="phone" required data-validation-required-message="Please enter your phone number.">
                        <p class="help-block text-danger"></p>*@
                    @Html.LabelFor(model => model.Author)
                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", @placeholder = "Author" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
                    @*<label>Message</label>
                        <textarea rows="5" class="form-control" placeholder="Message" id="message" required data-validation-required-message="Please enter a message."></textarea>
                        <p class="help-block text-danger"></p>
                    @Html.LabelFor(model => model.PostDate)
                    @Html.EditorFor(model => model.PostDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Post Date" } })
                    @Html.ValidationMessageFor(model => model.PostDate, "", new { @class = "text-danger" })
                </div>
            </div>*@
            <br>
            <div id="success"></div>
            <div class="row">
                <div class="form-group col-xs-12">
                    <button type="submit" class="btn btn-default">Send</button>
                </div>
            </div>
        }
    </div>
</div>


